{
  "name": "@theindividualcompany/bt-desktop",
  "version": "0.0.0",
  "description": "bt",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "pack": "npm run build && build --dir",
    "dist": "npm run build && build"
  },
  "build": {
    "appId": "company.individual.bt",
    "asar": false,
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "main/static/icons/windows.ico"
    },
    "squirrelWindows": {
      "loadingGif": "main/static/install-spinner.gif"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "main/static/icons/mac.icns",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "files": [
      "main",
      "node_modules"
    ],
    "extraResources": [
      {
        "from": "renderer/out",
        "to": "app/renderer"
      }
    ]
  },
  "author": {
    "name": "Individual, Inc.",
    "email": "team@individual.company"
  },
  "license": "GNU-3.0-only",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@tailwindcss/ui": "^0.3.0",
    "electron": "^9.0.4",
    "next": "^9.4.4",
    "postcss-preset-env": "^6.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tailwindcss": "^1.4.6"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "classnames": "^2.2.6",
    "draft-js": "^0.11.6",
    "electron-is-dev": "^1.2.0",
    "electron-next": "^3.1.5",
    "electron-store": "^5.2.0",
    "lodash": "^4.17.15"
  }
}
